{
  "name": "vcr-manager",
  "displayName": "vcr-manager",
  "description": "Manage VCR cassettes",
  "version": "1.0.0",
  "publisher": "dcaramello",
  "repository": {
    "type": "git",
    "url": "https://github.com/dcaramello/vcr-manager"
  },
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Testing"
  ],
  "keywords": [
    "python",
    "testing",
    "API"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "icon": "images/vcr.png",
  "contributes": {
    "commands": [
      {
        "command": "vcr.root",
        "title": "Set Cassette Root Path"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "VCR Manager",
      "properties": {
        "vcrManager.cassetteRoot": {
          "type": "string",
          "default": "api/tests/cassettes",
          "description": "Root path for VHS cassettes. Can be changed according to the project."
        }
      }
    },
    "activationEvents": [
      "onCommand:vcr.root"
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.103.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint": "^9.34.0",
    "esbuild": "^0.25.9",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.2",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
